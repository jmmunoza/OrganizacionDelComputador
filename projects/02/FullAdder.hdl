CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
        Xor(a=a, b=b, out=xor1);
        Xor(a=xor1, b=c, out=sum);
        And(a=xor1, b=c, out=and1);
        And(a=a, b=b, out=and2);
        Or(a=and1, b=and2, out=carry);
}