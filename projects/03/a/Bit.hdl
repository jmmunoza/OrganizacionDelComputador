/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
        Mux(a=d, b=in, sel=load, out=s);
        DFF(in=s, out=d);
        Not(in=d, out=d2);
        Not(in=d2, out=out);
}
